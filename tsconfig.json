{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      // "*": ["node_modules/*", "src/types/*"]
      // "@routes/*": ["src/routes/*"],
    },
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "strictNullChecks": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"],
}
